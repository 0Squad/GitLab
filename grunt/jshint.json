{
  "all": {
    "src": [
      "*.js",
      "lib/**.js",
      "spec/**.js"
    ],
    "ignore": [
      "node_modules/"
    ]
  },
  "options": {

    "curly": true,
    "eqeqeq": true,
    "strict": true,
    "undef": true,
    "sub": true,
    "esnext": true,
    "globalstrict": true,
    "quotmark": true,

    "jquery": true,
    "devel": true,
    "node": true,
    "jasmine": true

  }
}

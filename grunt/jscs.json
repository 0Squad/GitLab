{
  "status": {
    "src": ["<%= paths.project %>"],
    "options": {
      "preset": "airbnb",
      "requirePaddingNewLinesAfterBlocks": {
        "allExcept": ["inCallExpressions", "inArrayExpressions", "inProperties"]
      },
      "disallowMultipleVarDecl": "exceptUndefined",
      "validateIndentation": 4,
      "force": true
    }
  },
  "write": {
    "src": ["<%= paths.project %>"],
    "options": {
      "preset": "airbnb",
      "requirePaddingNewLinesAfterBlocks": {
        "allExcept": ["inCallExpressions", "inArrayExpressions", "inProperties"]
      },
      "disallowMultipleVarDecl": "exceptUndefined",
      "validateIndentation": 4,

      "fix": true
    }
  }
}
